<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.inventoryapplication">
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/storeicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProductActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        android:name=".DetailLayout"
        android:theme="@style/Editor"
            android:configChanges="keyboardHidden"
        android:parentActivityName=".DetailLayout" >
        <!-- Parent activity meta-data to support 4.0 and lower -->
        <!--<meta-data-->
            <!--android:name="android.support.PARENT_ACTIVITY"-->
            <!--android:value=".ProductActivity" />-->
    </activity>
        <provider
            android:authorities="com.example.android.inventoryapplication"
            android:name=".data.ProductProvider"
            android:exported="false"/>
    </application>

</manifest>